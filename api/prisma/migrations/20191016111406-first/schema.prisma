generator photon {
  provider = "photonjs"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model User {
  id    String  @default(cuid()) @id
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id         String     @default(cuid()) @id
  published  Boolean    @default(true)
  title      String
  content    String?
  author     User?
  categories Category[]
}

model Category {
  id    String @id @default(cuid())
  name  String
  posts Post[]
}